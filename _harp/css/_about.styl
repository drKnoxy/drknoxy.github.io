section.section-about
	background: url('/images/bg_fff.gif') 0 100% no-repeat;
	background-size: 100% 70%;

	h1
		font-size: 2.6rem
		letter-spacing: 0rem
		margin-top: 6rem
		margin-bottom: 3rem
		@media (min-width: 550px) {
			font-size: 3rem
			color: #fff
			text-shadow: 0 1px 2px rgba(0,0,0,0.2)
		}
		.pipe
			display none;
			@media (min-width: 550px) {
				display: inline
			}
		.career
			display block
			font-size: 2.2rem
			letter-spacing: .1rem
			@media (min-width: 550px) {
				display: inline;
			}

	h2
		margin-bottom 0

.contact-me li
	margin: 0
	display: inline-block

	a
		display: block;
		padding: 0 .4rem;
		height: 24px;
		text-align: center;
		line-height: 24px;
		background: #575656;
		margin-right: 1.2rem;
		color: #fff;
